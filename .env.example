# Aperilex Local Development Environment Variables

# Database
DATABASE_URL=postgresql+asyncpg://aperilex:dev_password@localhost:5432/aperilex
DB_PASSWORD=dev_password

# RabbitMQ (replaces Redis/Celery)
RABBITMQ_USER=aperilex
RABBITMQ_PASSWORD=dev_password
RABBITMQ_URL=amqp://aperilex:dev_password@localhost:5672/

# Security
SECRET_KEY=dev-secret-key-change-in-production-this-should-be-long
ENCRYPTION_KEY=dev-encryption-key-32-characters-long-enough
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
DEBUG=true
ENVIRONMENT=development
MESSAGING_ENVIRONMENT=development
APP_NAME=Aperilex
APP_VERSION=2.0.0

# SEC API Identity (Required by SEC)
EDGAR_IDENTITY=your-email@yourdomain.com

# LLM Configuration (add your API keys here when needed)
LLM_MODEL=gpt-5-nano
# LLM_MODEL=gemini-2.5-flash
DEFAULT_LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://openrouter.ai/api/v1

GOOGLE_API_KEY=your-google-api-key-here

# CORS (for development)
CORS_ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Storage Configuration
STORAGE_SERVICE_TYPE=local
LOCAL_STORAGE_PATH=./data

# Monitoring
PROMETHEUS_ENABLED=true
OPENTELEMETRY_ENABLED=false

# Docker User Configuration (for file permissions)
# These will be set automatically by the setup script
# UID=1000
# GID=1000
