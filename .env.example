# Database Configuration
DB_PASSWORD=dev_password

# RabbitMQ Configuration (replaces Redis/Celery)
RABBITMQ_USER=aperilex
RABBITMQ_PASSWORD=dev_password

# Application Security
SECRET_KEY=dev-secret-key-change-in-production-32-chars
ENCRYPTION_KEY=dev-encryption-key-32-characters-long

# SEC EDGAR Configuration
EDGAR_IDENTITY=your-email@yourdomain.com

# LLM Provider Configuration
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
DEFAULT_LLM_PROVIDER=openai

# Environment (development, testing, production)
ENVIRONMENT=development
MESSAGING_ENVIRONMENT=development

# AWS Configuration (for production only)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_SQS_QUEUE_URL=your-sqs-queue-url
# AWS_S3_BUCKET=your-s3-bucket-name

# Storage Configuration
# Local file storage paths (development)
FILING_STORAGE_PATH=./data/filings
ANALYSIS_STORAGE_PATH=./data/analyses

# Storage backend selection
USE_S3_STORAGE=false
