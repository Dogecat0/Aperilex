# Database Configuration
DATABASE_URL=postgresql+asyncpg://aperilex:your_password@localhost:5432/aperilex

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-32-chars
ALGORITHM=HS256

# LLM Provider Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=your-base-url
ANTHROPIC_API_KEY=your-anthropic-api-key
DEFAULT_LLM_PROVIDER=openai

# SEC API Configuration
SEC_USER_AGENT=your-email@example.com

# Application Configuration
DEBUG=false
API_TITLE=Aperilex API
API_VERSION=2.0.0
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_METRICS_PORT=9090
