# Aperilex Local Development Environment Variables

# Database
DATABASE_URL=postgresql+asyncpg://aperilex:your_password@localhost:5432/aperilex
DB_PASSWORD=your_password

# Redis
REDIS_URL=redis://:your_password@localhost:6379
REDIS_PASSWORD=your_password

# Security
SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
DEBUG=false
ENVIRONMENT=production
APP_NAME=Aperilex
APP_VERSION=2.0.0

# SEC API Identity (Required by SEC)
EDGAR_IDENTITY="your-email@example.com"

# LLM Configuration (add your API keys here when needed)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_BASE_URL="your-base-url"

# CORS (for development)
CORS_ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=false
OPENTELEMETRY_ENABLED=false
